<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema_de_asistencia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sistema_de_asistencia.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
</head>


<body>

    <script>
        // Verificar si el usuario está autenticado
        var isAuthenticated = @Html.Raw(User.Identity.IsAuthenticated.ToString().ToLower());

        if (!isAuthenticated) {
            window.location.href = '/Home/Index';
        }

    </script>

    <style>
        .nav-item {
            margin-right: 15px; /* Espacio entre botones */
        }

        .btn-login {
            background-color: #2C3E50;
            color: white;
            border-radius: 20px; /* Más redondeado */
            padding: 8px 16px;
            border: none;
        }

            .btn-login:hover {
                background-color: #1A252F; /* Color al pasar el mouse */
            }
    </style>

    <header>


        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand fw-bold" href="#">
                    <img src="~/img/1. Logo.jpg" alt="Logo" width="30" /> Sistema de Control de Acceso
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" href="#">Gestion Academica</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">Soporte</a></li>
                        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Main" asp-action="Configuracion">Configuracion</a></li>
                        <li class="nav-item"><a class="btn btn-dark text-white" asp-area="" asp-controller="Home" asp-action="Logout">Cerrar Sesión</a></li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-white border-top mt-auto">
        <div class="container py-4 d-flex flex-column flex-md-row justify-content-between align-items-start text-center text-md-start">
            <div>
                <p class="fw-bold mb-1">Sistemas de Control de Acceso</p>
                <p class="text-muted small mb-2">&copy;Copyright 2025</p>
            </div>
            
            <div>
                <div class="d-flex justify-content-center justify-content-md-start gap-3">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-linkedin-in"></i></a>
                    <a href="#"><i class="fab fa-youtube"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
            <div class="d-flex gap-5 flex-wrap mt-4 mt-md-0">
                <div>
                    <strong>Topic # 1</strong>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-decoration-none text-dark">Términos y condiciones</a></li>
                        <li><a href="#" class="text-decoration-none text-dark">Política de privacidad</a></li>
                    </ul>
                </div>
                <div>
                    <strong>Topic # 2</strong>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-decoration-none text-dark">“ES / EN”</a></li>
                        <li><a href="#" class="text-decoration-none text-dark">Soporte</a></li>
                    </ul>
                </div>
                <div>
                    <strong>Topic # 3</strong>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-decoration-none text-dark">Dirección</a></li>
                        <li><a href="#" class="text-decoration-none text-dark">Puntos de Atención</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
